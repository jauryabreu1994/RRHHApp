@model RRHHApp.Models.Usuarios.GrupoPermisoModel

@{
    ViewBag.Title = "Asignacion de Permisos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewBag.Title </h1>
</div>

<!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> Datos Generales </h5>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Permisos Seleccionados</label>
                            <div class="col-sm-10">
                                @Html.ListBoxFor(model => model.grupoPermisosSeleccionados, Model.grupoPermisos, htmlAttributes: new { @class = "form-control", style = "height:200px" })
                            </div>
                        </div>


                        <div class="text-center">
                            <input type="button" value="Volver Atras" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "GrupoUsuario") '" />
                            <input type="submit" value="Guardar" class="btn btn-primary" onclick="return confirm('Seguro que desea modificar la asignacion de Permisos?')" />
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</section>