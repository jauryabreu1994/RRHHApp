@model RRHHApp.Models.Solicitudes.UsuarioSolicitudes

@{
    ViewBag.Title = "Eliminar a: " + string.Format("{0}", Model.FechaCreacion);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewBag.Title </h1>
</div>
<style>
    .label {
        font-weight: bold;
    }
</style>
<!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> ¿Estás seguro/a que quieres eliminar esta solicitud? </h5>

                    <div>
                        <hr />

                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Descripcion </div>
                            <div class="col-lg-10 col-md-8">@Html.DisplayFor(model => model._Licencia.Descripcion) </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Fecha Desde </div>
                            <div class="col-lg-10 col-md-8">@Html.DisplayFor(model => model.FechaDesde) </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Fecha Hasta </div>
                            <div class="col-lg-10 col-md-8">@Html.DisplayFor(model => model.FechaHasta) </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Comentario </div>
                            <div class="col-lg-10 col-md-8">@Html.DisplayFor(model => model.Comentario) </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Estado </div>
                            <div class="col-lg-10 col-md-8">@Html.DisplayFor(model => model.Estado) </div>
                        </div>

                        <br />
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="container">
                                <div class="row">
                                    <div class="col text-center">

                                        <input type="button" value="Volver Atras" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "UsuarioSolicitudes") '" />
                                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                                    </div>
                                </div>
                            </div><br /><br />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>