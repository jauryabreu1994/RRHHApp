@model RRHHApp.Models.Usuarios.UsuarioAsociado

@{
    ViewBag.Title = "Eliminar Usuario Asociado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>@ViewBag.Title </h1>
</div>
<style>
    .label {
        font-weight: bold;
    }
</style>
<!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> ¿Estás seguro/a que quieres eliminar este Usuario Asociado? </h5>

                    <div>
                        <hr />

                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Lider </div>
                            <div class="col-lg-10 col-md-8"> @string.Format("{0} {1}", Model._Lider.Nombre, Model._Lider.Apellido)</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Recurso </div>
                            <div class="col-lg-10 col-md-8"> @string.Format("{0} {1}", Model._Usuario.Nombre, Model._Usuario.Apellido)</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Fecha de Creacion </div>
                            <div class="col-lg-10 col-md-8">  @Html.DisplayFor(model => model.FechaCreacion)</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-4 label "> Estado </div>
                            <div class="col-lg-10 col-md-8">  @Html.DisplayFor(model => model.Estado)</div>
                        </div>
                        <br />
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="container">
                                <div class="row">
                                    <div class="col text-center">

                                        <input type="button" value="Volver Atras" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Usuario") '" />
                                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                                    </div>
                                </div>
                            </div><br /><br />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>