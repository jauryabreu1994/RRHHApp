@model RRHHApp.Models.Usuarios.UsuarioAsociado

@{
    ViewBag.Title = "Asignar Usuario a un Lider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewBag.Title </h1>
</div>

<!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> Datos Generales </h5>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id, new { Value = 0 })
                        @Html.HiddenFor(model => model.FechaCreacion, new { Value = DateTime.Now })
                        @Html.HiddenFor(model => model.FechaModificacion, new { Value = DateTime.Now })
                        @Html.HiddenFor(model => model.Estado, new { Value = 1 })
                        @Html.HiddenFor(model => model.Eliminado, new { Value = false })
                        @Html.HiddenFor(model => model.LiderId, new { Value = ViewBag.Id })

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Lider</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("LiderId", null, htmlAttributes: new { @class = "form-control", autocomplete = "off", disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.LiderId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Recurso</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("UsuarioId", null, htmlAttributes: new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.UsuarioId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="text-center">
                            <input type="button" value="Volver Atras" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Usuario") '" />
                            <input type="submit" value="Guardar" class="btn btn-primary" onclick="return confirm('Seguro que desea guardar la Asignacion de Recurso?')" />
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</section>
