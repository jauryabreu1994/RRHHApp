@model RRHHApp.Models.Tardanza.UsuarioTardanza

@{
    ViewBag.Title = "Crear Tardanza de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewBag.Title </h1>
</div>

<!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> Datos Generales </h5>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id, new { Value = 0 })
                        @Html.HiddenFor(model => model.FechaCreacion, new { Value = DateTime.Now })
                        @Html.HiddenFor(model => model.FechaModificacion, new { Value = DateTime.Now })
                        @Html.HiddenFor(model => model.Estado, new { Value = 1 })
                        @Html.HiddenFor(model => model.Eliminado, new { Value = false })

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"> Usuario </label>
                            <div class="col-sm-10">
                                @Html.DropDownList("UsuarioId", null, htmlAttributes: new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.UsuarioId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"> Motivo de Tardanza </label>
                            <div class="col-sm-10">
                                @Html.DropDownList("MotivoTardanzaId", null, htmlAttributes: new { @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.MotivoTardanzaId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"> Fecha Tardanza </label>
                            <div class="col-sm-10">
                                <input type="date" id="FechaTardanza" name="FechaTardanza" class="form-control" value="@ViewBag.MaxDate" max="@ViewBag.MaxDate">
                                @Html.ValidationMessageFor(model => model.FechaTardanza, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Horas y/o Minutos</label>
                            <div class="col-sm-5">
                                <select id="Horas" name="Horas" class="form-control">
                                    <option value="0" selected> 0 hora</option>
                                    <option value="1"> 1 hora</option>
                                    <option value="2"> 2 horas</option>
                                    <option value="3"> 3 horas</option>
                                    <option value="4"> 4 horas</option>
                                    <option value="5"> 5 horas</option>
                                    <option value="6"> 6 horas</option>
                                    <option value="7"> 7 horas</option>
                                    <option value="8"> 8 horas</option>
                                    <option value="9"> 9 horas</option>
                                    <option value="10"> 10 horas</option>
                                    <option value="11"> 11 horas</option>
                                    <option value="12"> 12 horas</option>
                                </select>
                            </div>
                            <div class="col-sm-5">
                                <select id="Minutos" name="Minutos" class="form-control">
                                    <option value="0">0 minutos</option>
                                    <option value="5" selected>5 minutos</option>
                                    <option value="10">10 minutos</option>
                                    <option value="15">15 minutos</option>
                                    <option value="20">20 minutos</option>
                                    <option value="25">25 minutos</option>
                                    <option value="30">30 minutos</option>
                                    <option value="35">35 minutos</option>
                                    <option value="40">40 minutos</option>
                                    <option value="45">45 minutos</option>
                                    <option value="50">50 minutos</option>
                                    <option value="55">55 minutos</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Comentario</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="text-center">
                            <input type="button" value="Volver Atras" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "UsuarioTardanza") '" />
                            <input type="submit" value="Guardar" class="btn btn-primary" onclick="return confirm('Seguro que desea guardar la Tardanza del usuario?')" />
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</section>
