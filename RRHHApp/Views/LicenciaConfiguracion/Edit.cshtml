@model RRHHApp.Models.Licencias.LicenciaConfiguracion

@{
    ViewBag.Title = "Modificar Configuracion de la Licencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewBag.Title </h1>
</div>

<!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> Datos Generales </h5>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.FechaCreacion)
                        @Html.HiddenFor(model => model.FechaModificacion)
                        @Html.HiddenFor(model => model.Estado)
                        @Html.HiddenFor(model => model.Eliminado)

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Licencias</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("LicenciaId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LicenciaId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Tiempo del Usuario en la Empresa (En dias)</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.UsuarioTiempo, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.UsuarioTiempo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Tiempo de la Licencia (En dias)</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Requiere Aprobacion del Supervisor Directo</label>
                            <div class="col-sm-10 addtopspace">
                                <div class="form-check form-switch">
                                    @Html.EditorFor(model => model.RequiereSupervisorAprobacion, new { htmlAttributes = new { @class = "form-check-input" } })
                                    @Html.ValidationMessageFor(model => model.RequiereSupervisorAprobacion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Requiere Aprobacion del Supervisor Superior</label>
                            <div class="col-sm-10 addtopspace">
                                <div class="form-check form-switch">
                                    @Html.EditorFor(model => model.RequiereGerenteAprobacion, new { htmlAttributes = new { @class = "form-check-input" } })
                                    @Html.ValidationMessageFor(model => model.RequiereGerenteAprobacion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Requiere Aprobacion del RRHH</label>
                            <div class="col-sm-10 addtopspace">
                                <div class="form-check form-switch">
                                    @Html.EditorFor(model => model.RequiereRRHHAprobacion, new { htmlAttributes = new { @class = "form-check-input" } })
                                    @Html.ValidationMessageFor(model => model.RequiereRRHHAprobacion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <input type="button" value="Volver Atras" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "LicenciaConfiguracion") '" />
                            <input type="submit" value="Guardar" class="btn btn-primary" onclick="return confirm('Seguro que desea modificar la Configuracion de la Licencia?')" />
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</section>
